<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Set Preferences"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/textView1"
        android:text="String Pref:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etStringPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@id/textView2"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:inputType="text"
        android:hint="Enter String Pref" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Integer Pref:"
        android:padding="10dp"
        android:layout_below="@+id/etStringPref"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etIntegerPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignLeft="@id/etStringPref"
        android:layout_below="@+id/etStringPref"
        android:singleLine="true"
        android:hint="Enter Integer Pref"
        android:inputType="number" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Pref:"
        android:padding="10dp"
        android:layout_below="@+id/etIntegerPref"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etLongPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ems="10"
        android:layout_alignLeft="@id/etStringPref"
        android:layout_below="@+id/etIntegerPref"
        android:hint="Enter Long Pref"
        android:inputType="number" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/etLongPref"
        android:text="Boolean Pref"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/cbBoolean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLongPref"
        android:padding="10dp"
        android:layout_alignLeft="@id/etStringPref"
        android:text="False" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/cbBoolean"
        android:text="Float Pref:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etFloatPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        android:layout_below="@id/cbBoolean"
        android:layout_alignLeft="@id/etStringPref"
        android:hint="Enter Float Pref"
        android:inputType="numberDecimal" />


    <Button
        android:id="@+id/btnSetPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFloatPref"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Set Prefrences" />

</RelativeLayout>