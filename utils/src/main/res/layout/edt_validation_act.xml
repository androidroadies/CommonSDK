<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="EditText Validations."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etValidation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:hint="Enter Text" />

    <Button
        android:id="@+id/btnEmpty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etValidation"
        android:layout_below="@+id/etValidation"
        android:layout_marginTop="31dp"
        android:text="Check empty EditText." />

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:text="E-Mail Validation." />

</RelativeLayout>